<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:padding="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/trainbwstations_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        app:cardElevation="24dp"
        android:elevation="24dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_margin="10dp"
                android:padding="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:typeface="serif"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:id="@+id/trainbwstations_train_name"
                    android:text="Hyderabad EXP"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:text=" ("/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:id="@+id/trainbwstations_train_number"
                    android:typeface="monospace"
                    android:text="12603"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:text=")"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimaryDark"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight=".4"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MAS"
                        android:typeface="monospace"
                        android:id="@+id/trainbwstations_from_stn_code"
                        android:layout_gravity="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CHENNAI CENTRAL"
                        android:typeface="serif"
                        android:textStyle="bold"
                        android:id="@+id/trainbwstations_from_stn_name"
                        android:gravity="center"
                        android:maxLines="2"
                        android:layout_gravity="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="16:45"
                        android:id="@+id/trainbwstations_src_dep_time"
                        android:layout_gravity="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight=".2"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_timer_black_24dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="13:00"
                        android:id="@+id/trainbwstations_travel_time"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight=".4"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MAS"
                        android:typeface="monospace"
                        android:id="@+id/trainbwstations_dest_code"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HYDERABAD DECCAN"
                        android:id="@+id/trainbwstations_dest_name"
                        android:typeface="serif"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:maxLines="2"
                        android:layout_gravity="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="16:45"
                        android:id="@+id/trainbwstations_dest_arrv_time"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimaryDark"/>

            <LinearLayout
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="center"
                    android:textColor="@color/green"
                    android:layout_width="0dp"
                    android:layout_weight=".2"
                    android:textStyle="bold"
                    android:typeface="serif"
                    android:layout_height="wrap_content"
                    android:id="@+id/trainbwstations_mon"
                    android:text="Mon"/>
                <TextView
                    android:gravity="center"
                    android:textColor="@color/green"
                    android:layout_width="0dp"
                    android:textStyle="bold"
                    android:typeface="serif"
                    android:layout_weight=".2"
                    android:layout_height="wrap_content"
                    android:id="@+id/trainbwstations_tue"
                    android:text="Tue"/>
                <TextView
                    android:gravity="center"
                    android:textColor="@color/green"
                    android:layout_width="0dp"
                    android:textStyle="bold"
                    android:typeface="serif"
                    android:layout_weight=".2"
                    android:layout_height="wrap_content"
                    android:id="@+id/trainbwstations_wed"
                    android:text="Wed"/>
                <TextView
                    android:gravity="center"
                    android:textColor="@color/green"
                    android:layout_width="0dp"
                    android:textStyle="bold"
                    android:typeface="serif"
                    android:layout_weight=".2"
                    android:layout_height="wrap_content"
                    android:id="@+id/trainbwstations_thur"
                    android:text="Thu"/>
                <TextView
                    android:gravity="center"
                    android:textColor="@color/green"
                    android:layout_width="0dp"
                    android:textStyle="bold"
                    android:typeface="serif"
                    android:layout_weight=".2"
                    android:layout_height="wrap_content"
                    android:id="@+id/trainbwstations_fri"
                    android:text="Fri"/>
                <TextView
                    android:gravity="center"
                    android:textColor="@color/green"
                    android:textStyle="bold"
                    android:typeface="serif"
                    android:layout_width="0dp"
                    android:layout_weight=".2"
                    android:layout_height="wrap_content"
                    android:id="@+id/trainbwstations_sat"
                    android:text="Sat"/>
                <TextView
                    android:gravity="center"
                    android:textColor="@color/green"
                    android:layout_width="0dp"
                    android:textStyle="bold"
                    android:typeface="serif"
                    android:layout_weight=".2"
                    android:layout_height="wrap_content"
                    android:id="@+id/trainbwstations_sun"
                    android:text="Sun"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>