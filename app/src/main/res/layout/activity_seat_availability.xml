<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            app:cardBackgroundColor="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="150dp">
            <LinearLayout
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <AutoCompleteTextView
                    android:id="@+id/seat_avail_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Train Number"
                    android:textColorHint="#FFF"
                    android:typeface="serif"/>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <AutoCompleteTextView
                        android:id="@+id/seat_avail_source"
                        android:layout_weight=".4"
                        android:layout_width="0dp"
                        android:maxLines="1"
                        android:scrollHorizontally="true"
                        android:layout_height="wrap_content"
                        android:hint="From"/>
                    <Button
                        android:id="@+id/seat_avail_swapstn"
                        android:background="@drawable/ic_transfer_within_a_station_black_24dp"
                        android:layout_width="35dp"
                        android:layout_height="35dp" />
                    <AutoCompleteTextView
                        android:id="@+id/seat_avail_dest"
                        android:maxLines="1"
                        android:scrollHorizontally="true"
                        android:layout_weight=".4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:hint="To"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".3">
                    <Button
                        android:layout_width="0dp"
                        android:layout_weight=".3"
                        android:id="@+id/seat_avail_today"
                        android:text="Today"
                        android:maxLines="1"
                        android:textColor="#FFF"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:id="@+id/seat_avail_date"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:layout_weight=".4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="date"
                        android:gravity="center"
                        android:textColorHint="#FFF"
                        android:typeface="serif"/>
                    <Button
                        android:layout_width="0dp"
                        android:layout_weight=".3"
                        android:text="Tomorrow"
                        android:maxLines="1"
                        android:id="@+id/seat_avail_tomorrow"
                        android:textColor="#FFF"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:padding="5dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <Spinner
                        android:defaultFocusHighlightEnabled="true"
                        android:textAlignment="center"
                        android:entries="@array/classcode"
                        android:spinnerMode="dialog"
                        android:id="@+id/seat_avail_pref"
                        android:layout_weight=".5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                    </Spinner>
                    <Spinner
                        android:textAlignment="center"
                        android:defaultFocusHighlightEnabled="true"
                        android:entries="@array/quota"
                        android:spinnerMode="dialog"
                        android:id="@+id/seat_avail_quota"
                        android:layout_weight=".5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                    </Spinner>
                    </LinearLayout>
                </LinearLayout>
                <Button
                    android:id="@+id/seat_avail_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:typeface="monospace"
                    android:textColor="#FFF"
                    android:text="GET AVAILABILITY"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/seat_avail_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </FrameLayout>
</LinearLayout>