<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            app:cardBackgroundColor="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <AutoCompleteTextView
                    android:id="@+id/from_station"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="From"
                    android:textColorHint="#FFF"
                    android:typeface="serif"/>
                <AutoCompleteTextView
                    android:id="@+id/to_station"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="To"
                    android:textColorHint="#FFF"
                    android:typeface="serif"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/trainbwstations_today"
                        android:layout_width="0dp"
                        android:layout_weight=".3"
                        android:text="Today"
                        android:textColor="#FFF"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:id="@+id/trainbwstations_date"
                        android:layout_weight=".4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:hint="date"
                        android:gravity="center"
                        android:textColorHint="#FFF"
                        android:typeface="serif"/>
                    <Button
                        android:id="@+id/trainbwstations_tomorrow"
                        android:layout_width="0dp"
                        android:layout_weight=".3"
                        android:text="Tomorrow"
                        android:textColor="#FFF"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <Button
                    android:id="@+id/get_train_bw_stn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:typeface="monospace"
                    android:textColor="#FFF"
                    android:text="GET TRAIN INFO"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <FrameLayout
            android:id="@+id/trainbwstationsfrag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </FrameLayout>
    </LinearLayout>
</LinearLayout>